@model List<ChatMessage>

<!DOCTYPE html>
<html>
<head>
    <title>Simple Web Chat</title>
</head>
<body>
    <h1>Public Chat Room</h1>

    <!-- Display the QR Code -->
    <div>
        <img src="@ViewBag.QRCodeImage" alt="QR Code for this page URL" />
    </div>

    <div>
        @foreach (var message in Model)
        {
            <p>
                <strong>@message.UserName</strong> [@message.Timestamp]: @message.Message
            </p>
        }
    </div>

    <form method="post" action="/Chat/SendMessage">
        <input type="text" name="userName" placeholder="Enter your name" required />
        <input type="text" name="message" placeholder="Enter your message" required />
        <button type="submit">Send</button>
    </form>
</body>
</html>